    <!--  Validation Script -->
    <script>
      // Bootstrap 5 custom validation
      (function () {
        "use strict";
        const form = document.getElementById("registrationForm");
        form.addEventListener(
          "submit",
          function (event) {
            if (!form.checkValidity()) {
              event.preventDefault();
              event.stopPropagation();
            }
            form.classList.add("was-validated");
          },
          false
        );
      })();
    </script>
